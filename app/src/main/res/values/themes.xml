<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TP1DesenvolvimentoKotlinAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Search_View_Theme">
        <item name="colorSecondary">#8A9399</item>
        <item name="searchBackground">#1A2229</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">Pesquisar</item>
        <item name="hintColor">#8A9399</item>
        <item name="backIconTint">#8A9399</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconsTint">#8A9399</item>
    </style>
    
    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
    </style>

    <style name="Base_ToolbarTheme">
        <item name="android:textColorPrimary">#8A9399</item>
        <item name="android:textColorSecondary">#8A9399</item>
    </style>
</resources>